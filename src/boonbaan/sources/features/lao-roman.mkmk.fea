lookup LaoExtendedAbove.mkmk {
  lookupflag 0;

  markClass [ @T.lao \uni0ECD.su ] <anchor 0 0> @LaoExtendedAbove.mkmk;

  pos mark [ @T.lao.sd @AV.lao @T.lao.nig ] <anchor 0 0> mark @LaoExtendedAbove.mkmk;
  pos mark [ @T.lao \uni0ECD.su @T.lao.nig ] <anchor 0 240> mark @LaoExtendedAbove.mkmk;
    
} LaoExtendedAbove.mkmk;

lookup LaoExtendedAbove.left.mkmk {
