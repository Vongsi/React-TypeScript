} LaoExtendedAbove.left.mkmk;

lookup LaoExtendedBelow.mkmk {
  lookupflag 0;

  markClass [ @BV.lao ] <anchor 0 0> @LaoExtendedBelow.mkmk;

  pos mark [ \uni0EB8 \uni0EB9 ] <anchor 0 -300> mark @LaoExtendedBelow.mkmk;
  pos mark [ \uni0EBC ] <anchor 0 -210> mark @LaoExtendedBelow.mkmk;

  pos mark [ \uni0EB8.sd \uni0EB9.sd ] <anchor 0 -510> mark @LaoExtendedBelow.mkmk;
  pos mark [ \uni0EBC.sd ] <anchor 0 -420> mark @LaoExtendedBelow.mkmk;

} LaoExtendedBelow.mkmk;

feature mkmk {
  lookup LaoExtendedAbove.mkmk;
  lookup LaoExtendedAbove.left.mkmk;
  lookup LaoExtendedBelow.mkmk;
} mkmk;
